{
  "id": "http://json-schema.org/thing",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Book",
  "description": "A book",
  "type": "object",
  "extends": {
    "$ref": "Common/Thing.json"
  },
  "properties": {
    "genre": {
      "type": "string"
    },
    "pageLength": {
      "type": "number",
      "default": 25
    },
    "isbn": {
      "type": "string"
    },
    "author": {
      "$ref": "Common/Person.json"
    },
    "price": {
      "type": "number"
    }
  }
}